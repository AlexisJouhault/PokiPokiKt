<resources>

    <!-- Base application theme. -->
    <style name="PokiPoki" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="PokiPoki.SearchView">
        <item name="android:background">@drawable/background_round_corners</item>
    </style>

    <style name="PokiPoki.Text" parent="TextAppearance.AppCompat"/>

    <style name="PokiPoki.Text.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="PokiPoki.PrimaryButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

</resources>
